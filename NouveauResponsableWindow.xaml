<Window x:Class="InventaireCannabis.NouveauResponsableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouveau Responsable" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <Label Content="Nom du responsable"/>
            <TextBox x:Name="txtNomResponsable" Width="200" Height="30" Margin="10"/>
            <Button Content="Ajouter" Width="200" Height="38" Click="BtnAjouterResponsable_Click"/>
        </StackPanel>
    </Grid>
</Window>
