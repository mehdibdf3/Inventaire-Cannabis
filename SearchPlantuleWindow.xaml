<Window x:Class="InventaireCannabis.SearchPlantuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recherche Plantule" SizeToContent="WidthAndHeight" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <Label Content="Enter Plantule ID"/>
            <TextBox x:Name="txtSearchId" Width="200" Height="30" Margin="10"/>
            <Button Content="Rechercher" Width="200" Height="38" Click="BtnRechercherPlantule_Click" Margin="10"/>
            <TextBlock x:Name="txtPlantuleInfo" Margin="10"/>
            <Button x:Name="BtnModifierPlantule" Content="Modifier" Width="200" Height="38" Click="BtnModifierPlantule_Click" Margin="10" Visibility="Collapsed"/>
            <Button Content="Quitter" Width="200" Height="38" Click="BtnQuitter_Click" Margin="10"/>
            <Label Content="Historique des modifications" Margin="10,20,10,10"/>
            <DataGrid x:Name="dgPlantuleHistory" AutoGenerateColumns="True" CanUserAddRows="False" Margin="10" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
