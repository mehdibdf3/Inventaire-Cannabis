<Window x:Class="InventaireCannabis.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="163" Width="400">
    <Grid>
        <StackPanel Margin="0,0,0,8">
            <TextBlock x:Name="lblMessage" Text="Message" Margin="10"/>
            <TextBox x:Name="txtResponse" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="75" Margin="10" Click="OK_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
