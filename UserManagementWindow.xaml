<Window x:Class="InventaireCannabis.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management"
        Width="400" Height="500"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nom"/>
            <TextBox x:Name="txtNom" Width="200" Height="30" Margin="10"/>
            <Label Content="Prenom"/>
            <TextBox x:Name="txtPrenom" Width="200" Height="30" Margin="10"/>
            <Label Content="Email"/>
            <TextBox x:Name="txtEmail" Width="200" Height="30" Margin="10"/>
            <Label Content="Password"/>
            <PasswordBox x:Name="txtPassword" Width="200" Height="30" Margin="10"/>
            <Label Content="Status"/>
            <ComboBox x:Name="cbStatus" Width="200" Height="30" Margin="10">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Employee"/>
            </ComboBox>
            <Button Content="Ajouter Utilisateur" Width="200" Height="39" Click="BtnAjouterUtilisateur_Click"/>
        </StackPanel>
    </Grid>
</Window>
